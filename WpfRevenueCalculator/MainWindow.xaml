<Window x:Class="WpfRevenueCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRevenueCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Посчитать" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Height="60" Width="780" Click="Button_Click" FontSize="24"/>
        <TextBox x:Name="textBoxTotal" HorizontalAlignment="Center" Margin="0,170,0,0" TextWrapping="Wrap" Text="Сначала нажмите на кнопку" VerticalAlignment="Top" Width="298" TextChanged="TextBox_TextChanged" Height="30" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textBoxTime" HorizontalAlignment="Center" Margin="0,265,0,0" TextWrapping="Wrap" Text="Время вычисления" VerticalAlignment="Top" Width="440" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
